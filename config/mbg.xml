<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="trial" targetRuntime="MyBatis3DynamicSql">
        <!--<commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>-->

        <jdbcConnection driverClass="org.postgresql.Driver"
                        connectionURL="jdbc:postgresql://localhost:5434/trial_pet"
                        userId="postgres"
                        password="postgres">
        </jdbcConnection>

        <javaTypeResolver>
            <!--Использование LocalDate, LocalDateTime и тд -->
            <property name="useJSR310Types" value="true"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="test.model" targetProject="src/test/java"/>
        <javaClientGenerator targetPackage="test.mapper" targetProject="src/test/java"/>

        <table tableName="client" domainObjectName="ClientG" mapperName="ClientGMapper">
            <columnOverride column="uuid" javaType="java.util.UUID"/>
            <columnOverride column="name" javaType="ru.belov.trial.infrastructure.LocalizedString"/>
            <ignoreColumn column="datetime_created"/>
            <ignoreColumn column="datetime_updated"/>
        </table>

        <table tableName="city" domainObjectName="CityG" mapperName="CityGMapper">
            <columnOverride column="name" javaType="ru.belov.trial.infrastructure.LocalizedString"/>
        </table>
    </context>
</generatorConfiguration>