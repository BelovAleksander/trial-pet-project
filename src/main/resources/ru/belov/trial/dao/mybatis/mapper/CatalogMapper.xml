<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE mapper PUBLIC '-//mybatis.org//DTD Mapper 3.0//EN'
        'http://mybatis.org/dtd/mybatis-3-mapper.dtd'>

<mapper namespace="ru.belov.trial.dao.mybatis.mapper.CatalogMapper">
    <select id="getValues" resultType="ru.belov.trial.dto.CatalogResponseDto">
        SELECT  code,
                name
        FROM ${catalogName}
        ORDER BY ${orderBy.name} ${sortOrder.name}
        <if test="limit != null">
            LIMIT ${limit}
        </if>
        <if test="offset != null">
            OFFSET ${offset}
        </if>

    </select>
</mapper>